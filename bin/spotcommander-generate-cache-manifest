chdir(__DIR__ . '/../');

require_once('main.php');

$manifest = "CACHE MANIFEST\n\nCACHE:\n";

$files = glob('js/*.js', GLOB_BRACE);

foreach($files as $file)
{
	$manifest .= $file . "\n";
}

$files = glob('css/*.css', GLOB_BRACE);

foreach($files as $file)
{
	$manifest .= $file . "\n";
}

$files = glob('img/*.{png,gif,ico}', GLOB_BRACE);

foreach($files as $file)
{
	$manifest .= $file . "\n";
}

$manifest .= "\nNETWORK:\n*\n\n# SERIAL: " . project_serial;

file_write('cache-manifest.appcache', $manifest);

?>
