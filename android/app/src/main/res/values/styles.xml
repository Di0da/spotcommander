<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App -->
    <style name="app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/light_green</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_green</item>
        <item name="android:listViewStyle">@style/listview</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="transparent_theme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:listViewStyle">@style/listview_transparent_activity</item>
    </style>

    <!-- Main -->
    <style name="main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_inner_layout">
        <item name="android:layout_width">@dimen/main_layout_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">52dp</item>
    </style>

    <style name="main_inner_widget_layout" parent="main_inner_layout">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="main_make_donation_button" parent="main_make_donation_button_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/main_make_donation_button</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_make_donation_button_base" />
    
    <!-- Settings -->
    <style name="settings_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="settings_inner_layout">
        <item name="android:layout_width">@dimen/settings_inner_layout_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="settings_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:listSelector">@drawable/list_item</item>
    </style>

    <style name="settings_header_textview" parent="header_textview">
        <item name="android:paddingLeft">16dp</item>
    </style>
    
    <style name="settings_setting_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
    </style>
    
    <style name="settings_setting_text_layout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    
    <style name="settings_setting_text_title_textview">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:textSize">16sp</item>
		<item name="android:paddingBottom">2dp</item>
    </style>
    
    <style name="settings_setting_text_summary_textview">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item> 
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="settings_setting_checkbox_layout">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- Add computer -->
    <style name="add_computer_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="add_computer_toolbar_extension_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">56dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="add_computer_toolbar_extension_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="baseColor">@color/white</item>
        <item name="primaryColor">@color/white</item>
        <item name="errorColor">@color/red</item>
        <item name="floatingLabel">highlight</item>
        <item name="singleLineEllipsis">true</item>
    </style>

    <style name="add_computer_body_layout">
        <item name="android:layout_width">@dimen/add_computer_body_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/add_computer_body_layout_padding_top</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="add_computer_header_textview" parent="header_textview">
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="add_computer_body_inner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="add_computer_body_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="baseColor">@color/green</item>
        <item name="primaryColor">@color/green</item>
        <item name="floatingLabel">none</item>
        <item name="singleLineEllipsis">true</item>
    </style>

    <style name="add_computer_information_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorLink">@color/green</item>
    </style>
    
    <!-- Webview -->
    <style name="webview_webview" parent="@style/webview_webview_base" />
    
    <style name="webview_webview_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!-- Donate -->
    <style name="donate_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="donate_inner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">48dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="donate_button" parent="donate_button_base">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="donate_button_base">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="donate_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Playlists -->
    <style name="playlists_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/playlists_layout_padding_top</item>
        <item name="android:paddingRight">@dimen/playlists_layout_padding_right</item>
        <item name="android:paddingBottom">@dimen/playlists_layout_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/playlists_layout_padding_left</item>
    </style>

    <style name="playlists_inner_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/darker</item>
    </style>

    <style name="playlists_toolbar" parent="playlists_toolbar_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="playlists_toolbar_base">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="playlist_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:listSelector">@drawable/playlists_list_item</item>
    </style>

    <style name="playlists_error_textview">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Toolbar -->
    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/shadow_down_black_4</item>
    </style>
    
    <!-- Header -->
    <style name="header_textview" parent="header_textview_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="header_textview_base">
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Scrollviews -->
    <style name="scrollview" parent="scrollview_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:overScrollMode">never</item>
    </style>
    
    <style name="scrollview_base" />
    
    <!-- Listviews -->
    <style name="listview" parent="listview_base">
        <item name="android:divider">@color/light_grey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="listview_transparent_activity" parent="listview_base">
        <item name="android:divider">@color/dark</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    
    <style name="listview_base" parent="android:Widget.ListView" />
    
    <style name="list_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:listSelector">@drawable/list_item</item>
    </style>
    
    <style name="list_empty_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:padding">32dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/green</item>
    </style>
    
    <style name="list_item_computer_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_item_playlist_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Floating action button -->
    <style name="fab" parent="fab_base">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">68dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/fab</item>
    </style>

    <style name="fab_base" />
    
    <!-- Progress bar -->
    <style name="progressbar" parent="progressbar_base">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="progressbar_base" parent="android:Widget.ProgressBar.Large" />

    <!-- Dialogs -->

    <style name="dialog_scrollview" parent="scrollview">
        <item name="android:fadeScrollbars">false</item>
    </style>

    <style name="dialog_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="dialog_title" parent="dialog_title_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="dialog_title_base">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_message" parent="dialog_message_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorLink">@color/light_green</item>
    </style>

    <style name="dialog_message_base" />

    <style name="dialog_button1" parent="dialog_button1_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="dialog_button1_base">
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Widget -->
    <style name="widget_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/widget_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/widget</item>
    </style>

    <style name="widget_large_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/widget_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/widget</item>
    </style>

    <style name="widget_large_body_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="widget_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="widget_left_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/widget_left_button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="widget_center_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/widget_center_button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="widget_right_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/widget_right_button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="widget_horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="widget_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

</resources>