<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Main -->
    <style name="main_make_donation_button_base">
        <item name="android:background">@drawable/main_make_donation_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Donate -->
    <style name="donate_button_base">
        <item name="android:background">@drawable/button</item>
    </style>

    <!-- Web view -->
    <style name="webview_base">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarSize">6dp</item>
    </style>

    <!-- Scroll view -->
    <style name="scrollview_base">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarSize">6dp</item>
    </style>

    <!-- List view -->
    <style name="listview_base" parent="android:Widget.Holo.Light.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:scrollbarSize">6dp</item>
    </style>

</resources>